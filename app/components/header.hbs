<header class="page-header bg-gray-900 dark:border-gray-900" {{did-insert (fn this.onInsert)}} ...attributes>
    <div class="max-w-7xl mx-auto flex justify-between items-center px-4 py-5 sm:px-6 sm:py-4 lg:px-8 md:justify-start md:space-x-10">
        <div class="flex-1 flex items-center">
            <LinkTo @route="directory" class="flex">
                <span class="logo">{{@title}}</span>
            </LinkTo>
            <nav class="main-nav hidden md:flex items-center space-x-5 ml-5">
                <LinkTo @route="directory">Home</LinkTo>
                <LinkTo @route="directory">Explore</LinkTo>
                <LinkTo @route="directory">Submit</LinkTo>
            </nav>
            {{yield}}
        </div>
        <div class="flex items-center justify-end">
            <div class="mobile-nav-toggle-container flex md:hidden">
                <button {{on "click" (fn this.toggleMobileMenu)}} type="button" class="rounded-md bg-gray-900 hover:bg-green-500 border border-green-500 flex items-center justify-center w-10 h-9">
                    <FaIcon @icon="bars" class="text-green-500 hover:text-gray-900" />
                </button>
            </div>
            <Switch @isActive={{eq @theme "dark"}} @label="Night Mode" @onToggle={{fn this.onAction "onToggleTheme"}} class="hidden md:flex" />
        </div>
    </div>
    {{#if this.isMobileMenuOpen}}
        <div id="mobileNav" class="block md:hidden absolute top-0 left-0 right-0 w-full py-4 px-2 z-40">
            <div class="rounded-lg bg-green-500 py-1 px-2 shadow-sm">
                <div class="flex-1 flex items-center justify-between mb-4">
                    <LinkTo @route="directory" class="flex">
                        <span class="text-lg font-semibold text-gray-900">{{@title}}</span>
                    </LinkTo>
                    <div class="mobile-nav-toggle-container">
                        <button {{on "click" (fn this.closeMobileMenu)}} type="button" class="rounded-md bg-gray-900 border border-green-500 flex items-center justify-center w-10 h-9">
                            <FaIcon @icon="times" class="text-green-500" />
                        </button>
                    </div>
                </div>
                <nav class="flex flex-col space-y-3 pb-2">
                    <LinkTo @route="directory" class="rounded-md px-3 py-2 hover:bg-green-900 hover:bg-opacity-25">Home</LinkTo>
                    <LinkTo @route="directory" class="rounded-md px-3 py-2 hover:bg-green-900 hover:bg-opacity-25">Explore</LinkTo>
                    <LinkTo @route="directory" class="rounded-md px-3 py-2 hover:bg-green-900 hover:bg-opacity-25">Submit</LinkTo>
                </nav>
                <div class="p-3">
                    <Switch @isActive={{eq @theme "dark"}} @label="Night Mode" @onToggle={{fn this.onAction "onToggleTheme"}} @labelClass="text-gray-900 dark:text-gray-900" />
                </div>
            </div>
        </div>
    {{/if}}
</header>